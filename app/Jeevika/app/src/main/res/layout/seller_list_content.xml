<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sellerNameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="ABC" />

        <TextView
            android:id="@+id/sellerNumberText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Contact : 992987293847" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sellerPriceText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rs.80"
            android:layout_weight="1"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/sellerStarRatingText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rating : 5"
            android:layout_weight="1"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/sellerDistanceText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5km"
            android:padding="10dp"
            android:layout_weight="1"
            android:textAlignment="viewEnd"/>
    </LinearLayout>


</LinearLayout>